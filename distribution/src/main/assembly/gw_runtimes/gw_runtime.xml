<assembly>
    <includeBaseDirectory>false</includeBaseDirectory>
    <id>Micro Gateway Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/resources/conf</directory>
            <outputDirectory>wso2am-micro-gw-${project.version}/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/lib/jar/</directory>
            <outputDirectory>wso2am-micro-gw-${project.version}/lib/gateway</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/resources/runtime_logs</directory>
            <outputDirectory>wso2am-micro-gw-${project.version}/logs</outputDirectory>
        </fileSet>
        <!--create an empty exec folder-->
        <fileSet>
            <directory>${basedir}/resources/exec</directory>
            <outputDirectory>wso2am-micro-gw-${project.version}/exec</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${basedir}/target/runtime.zip</source>
            <outputDirectory>wso2am-micro-gw-${project.version}/</outputDirectory>
            <destName>runtime.zip</destName>
        </file>
        <file>
            <source>${basedir}/resources/bin/gateway</source>
            <outputDirectory>wso2am-micro-gw-${project.version}/bin</outputDirectory>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>${basedir}/resources/bin/gateway.bat</source>
            <outputDirectory>wso2am-micro-gw-${project.version}/bin</outputDirectory>
        </file>
        <file>
            <source>${basedir}/../README.md</source>
            <outputDirectory>wso2am-micro-gw-${project.version}</outputDirectory>
        </file>
        <file>
            <source>${basedir}/LICENSE-RUNTIME.txt</source>
            <outputDirectory>wso2am-micro-gw-${project.version}</outputDirectory>
            <destName>LICENSE.txt</destName>
        </file>
        <file>
            <source>${basedir}/../release-notes.html</source>
            <outputDirectory>wso2am-micro-gw-${project.version}</outputDirectory>
        </file>
        <file>
            <source>${basedir}/resources/updates/product.txt</source>
            <outputDirectory>wso2am-micro-gw-${project.version}/updates</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/bin/gw/tools</source>
            <outputDirectory>wso2am-micro-gw-${project.version}/bin</outputDirectory>
            <destName>tools</destName>
            <fileMode>755</fileMode>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>wso2am-micro-gw-${project.version}/lib/gateway</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.wso2.am.microgw:org.wso2.micro.gateway.core:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
